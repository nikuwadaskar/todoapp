<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=title%></title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="input">
      <form action="/update-data" method="post">
        <div id="input" class="main none">
          <div class="select">
            <div class="category">
              <select name="category" id="cars" required>
                <option value="Choose a Category" name="category">
                  Choose a Category
                </option>
                <option value="Personal">Personal</option>
                <option value="Work">Work</option>
                <option value="School">School</option>
                <option value="Cleaning">Cleaning</option>
                <option value="Other">Other</option>
              </select>
            </div>
            <div class="date">
              <input type="date" class="date-picker" name="date" required />
            </div>
            <div class="date">
              <button type="submit">Add Activity</button>
            </div>
          </div>
          <div>
            <textarea
              class="textarea"
              name="text"
              id=""
              cols="auto"
              rows="05"
              required
            ></textarea>
          </div>
        </div>
        <span class="material-symbols-outlined plus icon" id="add">add</span>
      </form>
    </div>

    <div class="wrapper">
      <%for (let i of data_1){%>

      <div class="content">
        <h2><%=i.category%></h2>
        <p><%=i.text%></p>
        <div class="bottom">
          <p><%=i.date%></p>
          <a href="/delete-contact/?id=<%=i._id%>">
            <span class="material-symbols-outlined icon"> delete </span></a
          >
        </div>
      </div>

      <%}%>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.6.0.js"
      integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
      crossorigin="anonymous"
    ></script>
    <script src="/js/js.js"></script>
  </body>
</html>
